<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-3 hidden-xs"></div>
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
      <h1>Reset Password</h1>

      <%= form_tag new_user_password_users_path do |f| %>
        <%= hidden_field_tag :token, @token %>
        <div class="form-group">
          <%= label_tag :new_password %>
          <%= password_field_tag :new_password, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :new_password_confirmation %>
          <%= password_field_tag :new_password_confirmation, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= submit_tag "Submit", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-3 hidden-xs"></div>
  </div>
</div>
